		"svelte-eslint-parser": "^0.43.0",
		"zod": "^3.24.1"
	},
	"lint-staged": {
		"*.{ts,svelte}": [
			"eslint --fix",
			"prettier --write",
			"spellcheck"
		],
		"*.css": [
			"prettier --write",
			"stylelint --fix"
		]
	}
