		"@types/d3-graphviz": "^2.6.10",
		"@types/eslint": "^9.6.1",
		"@types/eslint-plugin-security": "^3.0.0",
		"@types/node": "^22.13.1",
		"@vitest/eslint-plugin": "^1.1.28",
		"commitlint": "^19.7.1",
		"commitlint-plugin-function-rules": "^4.0.1",
		"cspell": "^8.17.3",
		"drizzle-kit": "^0.30.4",
		"eslint": "^9.20.1",
		"eslint-config-prettier": "^10.0.1",
		"eslint-import-resolver-typescript": "^3.7.0",
